<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.thesischecker.dto.UserProfileEntity" table="user_profile" schema="" catalog="thesis">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int"/>
        </property>
        <property name="firstName">
            <column name="first_name" sql-type="varchar"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar"/>
        </property>
        <property name="postalCode">
            <column name="postal_code" sql-type="varchar"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="datetime"/>
        </property>
        <one-to-one name="User" class="com.thesischecker.dto.UserEntity"/>
    </class>
</hibernate-mapping>