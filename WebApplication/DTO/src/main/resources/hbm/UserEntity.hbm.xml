<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.thesischecker.dto.UserEntity" table="user" schema="" catalog="thesis">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="email">
            <column name="email" sql-type="varchar"/>
        </property>
        <property name="salt">
            <column name="salt" sql-type="varchar"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar"/>
        </property>
        <property name="role">
            <column name="role" sql-type="varchar"/>
        </property>
        <property name="token">
            <column name="token" sql-type="varchar"/>
        </property>
        <property name="active">
            <column name="active" sql-type="tinyint"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="datetime"/>
        </property>
        <set name="analysisEntitySet">
            <key>
                <column name="id" not-null="false"/>
            </key>
            <one-to-many class="com.thesischecker.dto.AnalysisEntity"/>
        </set>
        <set name="userUpdateEntitySet">
            <key>
                <column name="id" not-null="false"/>
            </key>
            <one-to-many class="com.thesischecker.dto.UserUpdateEntity"/>
        </set>
        <set name="resourceEntitySet">
            <key>
                <column name="id" not-null="false"/>
            </key>
            <one-to-many class="com.thesischecker.dto.ResourceEntity"/>
        </set>
        <one-to-one name="Profile" class="com.thesischecker.dto.UserProfileEntity"/>
    </class>
</hibernate-mapping>