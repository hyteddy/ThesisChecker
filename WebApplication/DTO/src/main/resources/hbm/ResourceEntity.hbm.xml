<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.thesischecker.dto.ResourceEntity" table="resource" schema="" catalog="thesis">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar"/>
        </property>
        <property name="description">
            <column name="description" sql-type="longtext" length="2147483647"/>
        </property>
        <property name="fileType">
            <column name="file_type" sql-type="varchar"/>
        </property>
        <property name="filePath">
            <column name="file_path" sql-type="varchar"/>
        </property>
        <property name="plainText">
            <column name="plain_text" sql-type="longtext" length="2147483647"/>
        </property>
        <property name="userId">
            <column name="user_id" sql-type="int"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="datetime"/>
        </property>
        <one-to-one name="User" class="com.thesischecker.dto.UserEntity"/>
        <set name="Analysis" inverse="true" table="analysis_has_resource" schema="" catalog="thesis">
            <key>
                <column name="resource_id" not-null="true"/>
            </key>
            <many-to-many not-found="ignore" class="com.thesischecker.dto.AnalysisEntity">
                <column name="analysis_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>