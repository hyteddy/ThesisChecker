<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.thesischecker.dto.UserUpdateEntity" table="user_update" schema="" catalog="thesis">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int"/>
        </property>
        <property name="token">
            <column name="token" sql-type="varchar"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar"/>
        </property>
        <set name="User" inverse="true">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.thesischecker.dto.UserEntity"/>
        </set>
    </class>
</hibernate-mapping>